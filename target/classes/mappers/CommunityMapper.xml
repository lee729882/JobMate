<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jobmate.mapper.CommunityMapper">

    <!-- ë§¤í•‘ -->
    <resultMap id="CommunityPostMap" type="com.jobmate.domain.CommunityPost">
        <id property="id" column="id"/>
        <result property="category" column="category"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="writer" column="writer"/>

        <!-- ðŸ”¥ BLOB â†’ writerProfileBlob -->
        <result property="writerProfileBlob" column="writer_profile_blob" jdbcType="BLOB"/>

        <result property="createdAt" column="created_at"/>
    </resultMap>


    <!-- ì¹´í…Œê³ ë¦¬ ë³„ ì¡°íšŒ -->
    <select id="findByCategory" parameterType="string" resultMap="CommunityPostMap">
        SELECT *
        FROM COMMUNITY_POST
        WHERE CATEGORY = #{category}
        ORDER BY ID DESC
    </select>

    <!-- ë‹¨ê±´ ì¡°íšŒ -->
    <select id="findById" parameterType="long" resultMap="CommunityPostMap">
        SELECT *
        FROM COMMUNITY_POST
        WHERE ID = #{id}
    </select>

    <!-- ê¸€ ì €ìž¥ -->
    <insert id="insertPost" parameterType="com.jobmate.domain.CommunityPost">
        INSERT INTO COMMUNITY_POST
        (id, category, title, content, writer, writer_profile_blob)
        VALUES (
            COMMUNITY_POST_SEQ.NEXTVAL,
            #{category},
            #{title},
            #{content},
            #{writer},
            #{writerProfileBlob, jdbcType=BLOB}
        )
    </insert>

    <!-- ì‚­ì œ -->
    <delete id="deletePost" parameterType="long">
        DELETE FROM COMMUNITY_POST
        WHERE ID = #{id}
    </delete>

</mapper>
