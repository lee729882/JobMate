<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jobmate.mapper.InterviewHistoryMapper">

    <!-- 공통 매핑 -->
    <resultMap id="InterviewHistoryMap" type="com.jobmate.domain.InterviewHistory">
        <id property="id" column="id"/>
        <result property="memberId" column="member_id"/>   <!-- ★ Long -->
        <result property="question" column="question"/>
        <result property="answer" column="answer"/>
        <result property="feedback" column="feedback"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- INSERT -->
    <insert id="insert" parameterType="com.jobmate.domain.InterviewHistory">
        INSERT INTO interview_history (
              id,
              member_id,
              question,
              answer,
              feedback,
              created_at
        ) VALUES (
              interview_history_seq.NEXTVAL,
              #{memberId,jdbcType=BIGINT},  <!-- ★ Long 사용 -->
              #{question},
              #{answer},
              #{feedback},
              SYSDATE
        )
    </insert>

    <!-- 로그인한 회원의 전체 기록 -->
    <select id="findByMemberId" resultMap="InterviewHistoryMap">
        SELECT
            id,
            member_id,
            question,
            answer,
            feedback,
            created_at
        FROM interview_history
        WHERE member_id = #{memberId}
        ORDER BY created_at DESC
    </select>

    <!-- 내 기록 상세 -->
    <select id="findByIdAndMemberId" resultMap="InterviewHistoryMap">
        SELECT
            id,
            member_id,
            question,
            answer,
            feedback,
            created_at
        FROM interview_history
        WHERE id = #{id}
          AND member_id = #{memberId}
    </select>

</mapper>
